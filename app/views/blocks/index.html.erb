<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4">Blocks</h1>

  <div class="mb-4">
    <%= link_to 'New Block', new_block_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Associated Stations</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @blocks.each do |block| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= block.title %></td>
            <td class="px-6 py-4"><%= truncate(block.description, length: 50) %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= block.priority %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= block.status %></td>
            <td class="px-6 py-4"><%= block.stations.pluck(:name).join(', ') %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'View', block, class: 'text-blue-600 hover:text-blue-900 mr-2' %>
              <%= link_to 'Edit', edit_block_path(block), class: 'text-indigo-600 hover:text-indigo-900 mr-2' %>
              <%= link_to 'Delete', block, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>