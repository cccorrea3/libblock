<%= form_with(model: block, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <% if block.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">Error!</strong>
      <ul>
        <% block.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :priority, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :priority, ['Low', 'Medium', 'High'], { include_blank: true }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :status, ['To Do', 'In Progress', 'Done'], { include_blank: true }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :roles, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :roles, value: block.roles.join(", "), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Separate roles with commas</p>
  </div>

  <div class="mb-4">
    <%= form.label :pre_conditions, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :pre_conditions, value: block.pre_conditions.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Enter each pre-condition on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :post_conditions, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :post_conditions, value: block.post_conditions.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    
    <p class="text-gray-600 text-xs italic">Enter each post-condition on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :main_flow, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :main_flow, value: block.main_flow.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Enter each step of the main flow on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :alternative_flow, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :alternative_flow, value: block.alternative_flow.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Enter each step of the alternative flow on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :functional_requests, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :functional_requests, value: block.functional_requests.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Enter each functional request on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :non_functional_requests, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :non_functional_requests, value: block.non_functional_requests.join("\n"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Enter each non-functional request on a new line</p>
  </div>

  <div class="mb-4">
    <%= form.label :notes, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :notes, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :associated_stations, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :associated_stations, value: block.associated_stations.join(", "), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <p class="text-gray-600 text-xs italic">Separate station names with commas</p>
  </div>

  <div class="mb-4">
    <%= form.label :environment_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_select :environment_id, Environment.all, :id, :name, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>