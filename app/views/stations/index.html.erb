<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Stations</h1>
    <%= link_to 'New Station', new_station_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Blocks Count</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @stations.each do |station| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= station.name %></td>
            <td class="px-6 py-4"><%= truncate(station.description, length: 50) %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= station.blocks.count %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'View', station, class: 'text-indigo-600 hover:text-indigo-900 mr-2' %>
              <%= link_to 'Edit', edit_station_path(station), class: 'text-indigo-600 hover:text-indigo-900 mr-2' %>
              <%= button_to 'Delete', station, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900 bg-transparent border-none cursor-pointer' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>