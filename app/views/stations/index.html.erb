<h3 class="text-xl font-semibold mb-4">Stations</h3>

<%= link_to 'New Station', new_station_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block' %>

<table class="min-w-full bg-white">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">Associated Lines</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td class="py-2 px-4 border-b"><%= station.name %></td>
        <td class="py-2 px-4 border-b">
          <% station.metro_lines.each do |line| %>
            <span class="inline-block w-4 h-4 rounded-full mr-1" style="background-color: <%= line.color %>;"></span>
          <% end %>
        </td>
        <td class="py-2 px-4 border-b">
          <%= link_to 'View', station, class: 'text-blue-500 hover:text-blue-700' %>
          <%= link_to 'Edit', edit_station_path(station), class: 'text-yellow-500 hover:text-yellow-700 ml-2' %>
          <%= link_to 'Delete', station, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700 ml-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>