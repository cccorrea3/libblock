<h3 class="text-xl font-semibold mb-4">Dashboard</h3>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <div class="bg-white p-6 rounded-lg shadow">
    <h4 class="text-lg font-semibold mb-2">Total Lines</h4>
    <p class="text-4xl font-bold"><%= @metro_lines_count %></p>
  </div>
  <div class="bg-white p-6 rounded-lg shadow">
    <h4 class="text-lg font-semibold mb-2">Total Stations</h4>
    <p class="text-4xl font-bold"><%= @stations_count %></p>
  </div>
  <div class="bg-white p-6 rounded-lg shadow">
    <h4 class="text-lg font-semibold mb-2">Total Blocks</h4>
    <p class="text-4xl font-bold"><%= @blocks_count %></p>
  </div>
</div>

