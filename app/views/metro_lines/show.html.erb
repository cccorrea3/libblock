<h3 class="text-xl font-semibold mb-4">Metro Line Details</h3>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= @metro_line.name %>
    </h3>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Color
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <div class="w-6 h-6 rounded-full" style="background-color: <%= @metro_line.color %>;"></div>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">
          Stations
        </dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <ul class="border border-gray-200 rounded-md divide-y divide-gray-200">
            <% @metro_line.stations.each do |station| %>
              <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm">
                <%= station.name %>
              </li>
            <% end %>
          </ul>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="mt-4">
  <%= link_to 'Edit', edit_metro_line_path(@metro_line), class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded' %>
  <%= link_to 'Back', metro_lines_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2' %>
</div>